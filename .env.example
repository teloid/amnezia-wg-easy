WG_HOST=your-public-ip-or-dns
PASSWORD_HASH=$2y$10$replace_with_web_ui_bcrypt_hash
WG_EASY_IMAGE=teloid/python_hobby:amnezia-wg-easy-beta
WG_DATA_PATH=~/.amnezia-wg-easy

WG_EASY_UI_LANG=en
PORT=51821
WG_DEVICE=eth0
WG_PORT=51820
WG_DEFAULT_ADDRESS=10.8.0.x
WG_DEFAULT_DNS=1.1.1.1
WG_ALLOWED_IPS=0.0.0.0/0, ::/0
DICEBEAR_TYPE=bottts
USE_GRAVATAR=true

# Enable Prometheus endpoints:
# - /metrics
# - /metrics/json
ENABLE_PROMETHEUS_METRICS=true

# Optional: bcrypt hash for Basic Auth on wg-easy metrics endpoint.
# PROMETHEUS_METRICS_PASSWORD=$2y$10$replace_with_metrics_endpoint_bcrypt_hash

# Prometheus container options.
PROMETHEUS_IMAGE=prom/prometheus:latest
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL=15s

# If wg-easy /metrics auth is enabled, set plain credentials for scraping.
# PROMETHEUS_SCRAPE_USERNAME=prometheus
# PROMETHEUS_SCRAPE_PASSWORD=replace_with_plain_password

# Optional: protect Prometheus UI/API itself using basic auth.
# PROMETHEUS_WEB_USERNAME=admin
# PROMETHEUS_WEB_PASSWORD_HASH=$2y$10$replace_with_prometheus_ui_bcrypt_hash
